<table class="table">
  <thead>
  <tr>
    <th scope="col">Title</th>
    <th scope="col">Content</th>
    <th scope="col">Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.content %></td>
      <td><%= link_to 'Edit', edit_post_path(post.id), class: 'btn btn-primary' %></td>
      <td><%= link_to 'Comments', post_comments_path(post.id), class: 'btn btn-danger' %></td>
      <td><%= button_to 'Delete', post_path(post.id), method: :delete, class: 'btn btn-danger' %></td>
    </tr>
  <% end %>
  </tbody>
</table>