<div class="container mt-5">
  <h2 class="mb-4">Create a New Post</h2>

  <%= form_with model: @post, url: posts_path, method: :post do |form| %>
    <div>
      <%= form.label :title %>
      <%= form.text_field :title %>
    </div>
    <div>
      <%= form.label :content %>
      <%= form.text_field :content %>
    </div>
    <%= form.submit %>
  <% end %>
</div>